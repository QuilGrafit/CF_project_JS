{
  "routes": [
    {
      "src": "/api/bot",
      "dest": "/api/bot.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/cron",
      "dest": "/api/cron.js",
      "methods": ["GET"]
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot-token",
    "MONGO_URI": "@mongo-uri",
    "TON_WALLET": "@ton-wallet"
  }
}
